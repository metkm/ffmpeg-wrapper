{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ffmpeg-wrapper",
  "version": "1.0.0",
  "identifier": "com.ffmpeg-wrapper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run generate",
    "frontendDist": "../.output/public"
  },
  "app": {
    "windows": [
      {
        "title": "Ffmpeg Wrapper",
        "width": 800,
        "height": 600,
        "transparent": true,
        "windowEffects": {
          "effects": ["mica"]
        },
        "visible": false,
        "minHeight": 200,
        "minWidth": 300,
        "decorations": false,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ]
  }
}
