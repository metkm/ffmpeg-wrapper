{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FFTrim",
  "version": "1.4.0",
  "identifier": "com.fftrim",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run generate",
    "frontendDist": "../.output/public"
  },
  "app": {
    "windows": [
      {
        "title": "FFTrim",
        "width": 1050,
        "height": 610,
        "transparent": true,
        "visible": false,
        "minHeight": 610,
        "minWidth": 1050,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/ffmpeg"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBNkE5QkQwOTU1Mzc4NzIKUldSeWVGT1YwSnRxU2c4bCt5ZjdpeThubEw2S2pRNjdha2JmNkx6ZWZQWkJzOWlKeEVFMlFGRDcK",
      "endpoints": ["https://github.com/metkm/ffmpeg-wrapper/releases/latest/download/latest.json"]
    }
  }
}
